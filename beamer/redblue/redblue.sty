\newcommand*{\TheFooter}[1][]{%
\begingroup%
\begin{beamercolorbox}[ht=4.8mm,wd=114.5mm]{footer}%
  \fboxsep0pt%
  \parbox[t][7mm]{114.5mm}{%
    \scriptsize\textbf{\copytext}\\[0.4\baselineskip]%
    \ifthenelse{\equal{#1}{}}{%
      \textcolor{black}{%
        \hfill%
        \parbox{40mm}{%
          \raggedleft%
          \TheTranslatedPage~\insertframenumber%
        }%
      }%
    }%
  }%
\end{beamercolorbox}\par%
\endgroup%
}

